---
import Layout from "~/components/layout.astro"
import DetailsHero from "~/components/use-cases/DetailsHero.vue"
import Alternation from "~/components/features/shared/Alternation.astro"
import Section from "~/components/layout/Section.vue"
import Enterprise from "~/components/use-cases/Enterprise.vue"
import Cards from "~/components/use-cases/Cards.astro"
import Capabilities from "~/components/use-cases/Capabilities.vue"
import FooterContact from "~/components/layout/FooterContact.astro"
import AlertCircle from "vue-material-design-icons/AlertCircle.vue"
import ChartAreaspline from "vue-material-design-icons/ChartAreaspline.vue"
import CloudRefreshVariant from "vue-material-design-icons/CloudRefreshVariant.vue"
import Cogs from "vue-material-design-icons/Cogs.vue"
import TimerCogOutline from "vue-material-design-icons/TimerCogOutline.vue"

const TITLE = "Streamline your Microservices Orchestration"
const DESCRIPTION =
    "Kestra empower software engineers to manage microservices efficiently, enhancing reliability and performance."

const CAPABILITIES = ["Database Management", "API Orchestration"]

const MAIN_CONTENT = [
    {
        title: "Orchestrate Your Microservices",
        image: {
            src: "/landing/usecases/microservices-orchestration/orchestrate-microservices.svg",
            alt: "Orchestrate Your Microservices",
            width: 568,
            height: 420,
        },
        description:
            "Kestra enables you to orchestrate microservices effortlessly, ensuring smooth communication and coordination between services, which is crucial for maintaining a reliable and scalable architecture.",
        content: `
            <ul>
                <li>
                    Automated Workflows:
                    <span>Create and manage workflows that coordinate various microservices, ensuring they work together seamlessly.</span>
                </li>
                <li>
                    Service Communication:
                    <span>Facilitate efficient communication between microservices, reducing latency and improving overall system performance.</span>
                </li>
                <li>
                    Event-Driven Architecture:
                    <span>Leverage Kestra's event-driven capabilities to trigger workflows based on specific events, such as data changes or API calls.</span>
                </li>
            </ul>
        `,
    },
    {
        title: "CI/CD Integration and Automation",
        image: {
            src: "/landing/usecases/microservices-orchestration/ci-di-integration.svg",
            alt: "CI/CD Integration",
            width: 568,
            height: 420,
        },
        description:
            "Kestra helps you streamline and automate your continuous integration and continuous deployment (CI/CD) pipelines, ensuring smooth and reliable releases of microservices.",
        content: `
            <ul>
                <li>
                    Automated Build and Test:
                    <span>
                        Use Kestra to automate the building, testing, and deployment of microservices, reducing manual intervention and errors.
                    </span>
                </li>
                <li>
                    Continuous Integration:
                    <span>
                        Integrate Kestra with CI tools like Jenkins, GitHub Actions, or GitLab CI to ensure that code changes are automatically tested and merged.
                    </span>
                </li>
                <li>
                    Continuous Deployment:
                    <span>
                        Automate the deployment of microservices to various environments, ensuring that new versions are released quickly and reliably.
                    </span>
                </li>
                <li>
                    Rollback Capabilities:
                    <span>
                        Implement automated rollback workflows to revert to previous versions in case of deployment failures, ensuring minimal downtime.
                    </span>
                </li>
            </ul>
        `,
    },
    {
        title: "Manage Microservices Regardless of Language",
        image: {
            src: "/landing/usecases/microservices-orchestration/manage-microservices.svg",
            alt: "Manage Microservices",
            width: 604,
            height: 477,
        },
        description:
            "Kestra's language-agnostic platform allows software engineers from any background to manage their scripts and orchestrate microservices efficiently.",
        content: `
            <ul>
                <li>
                    Support for Multiple Languages:
                    <span>
                       Orchestrate scripts written in Python, Java, JavaScript, Go, and more, ensuring that developers can use the tools they are most comfortable with.
                    </span>
                </li>
                <li>
                    Separation of Business Logic and Orchestration Logic:
                    <span>
                         Keep your business logic separate from orchestration logic, making workflows easier to manage and maintain.
                    </span>
                </li>
                <li>
                    Unified Management:
                    <span>
                         Use Kestra to manage and automate workflows across different programming environments, ensuring consistency and efficiency.
                    </span>
                </li>
            </ul>
        `,
    },
]

const CHALLENGES_TITLE = `<span class="highlight">Key Benefits</span> of Using Kestra for<br/> Microservices Orchestration`

const CARDS_DATA = [
    {
        icon: Cogs,
        cardInfo: {
            title: "Flexible Integration",
            description:
                "Integrate seamlessly with various tools and platforms, providing a unified orchestration solution.",
        },
    },
    {
        icon: AlertCircle,
        cardInfo: {
            title: "Minimize Errors",
            description:
                "Ensure reliable communication and coordination between microservices, reducing the risk of errors and downtime.",
        },
    },
    {
        icon: TimerCogOutline,
        cardInfo: {
            title: "Increase Efficiency",
            description:
                "Automate routine tasks and workflows, allowing your team to focus on strategic development",
        },
    },
    {
        icon: ChartAreaspline,
        cardInfo: {
            title: "CI/CD Pipelines",
            description:
                "Automate continuous integration and continuous deployment pipelines, ensuring smooth and reliable releases of microservices.",
        },
    },
    {
        icon: CloudRefreshVariant,
        cardInfo: {
            title: "Data Synchronization",
            description:
                "Ensure data consistency across microservices by orchestrating data synchronization workflows.",
        },
    },
]
---

<Layout title={TITLE} description={DESCRIPTION}>
    <DetailsHero
        client:load
        title="Microservices <br> Orchestration"
        description="Automate, orchestrate, and Optimize Your Microservices."
        image={{
            src: "/landing/usecases/microservices-orchestration/header-hero.svg",
            alt: "Kestra HTTP",
        }}
    />

    <Alternation items={MAIN_CONTENT}>
        <Section
            subtitle="your Microservices Orchestration"
            subtitleBefore="Streamline"
            class="p-0 bg-transparent"
            baseline="Kestra empower software engineers to manage microservices efficiently, enhancing reliability and performance."
        />
    </Alternation>

    <Enterprise client:visible />

    <Cards title={CHALLENGES_TITLE} cards={CARDS_DATA} />

    <Capabilities
        client:visible
        title="for Platform Orchestration"
        capabilities={CAPABILITIES}
    />

    <FooterContact
        client:visible
        title="Ready to take your Infrastructure to the next level ?"
    />
</Layout>
