---
import Layout from '../../components/layout.astro';
import SolutionsHeader from '~/components/solutions/Header.vue';
import SolutionsPossibilities from '~/components/solutions/Possibilities.vue';
import SolutionsUseCases from '~/components/solutions/UseCases.vue';
import HomeEnterprise from '~/components/home/Enterprise.vue';
import { $fetch } from '~/utils/fetch';

const title = "Use cases for Modern Data Orchestration";
const description = "Harness the value of your data, unlock new insights, and drive informed decision-making using Kestra's automation platform";

const stories = await $fetch('https://api.kestra.io/v1/customer-stories-v2?featured=true')
---

<Layout title={title} description={description}>
    <SolutionsHeader />
    <SolutionsPossibilities />
    <SolutionsUseCases />
    <HomeEnterprise {stories} client:visible />
</Layout>
