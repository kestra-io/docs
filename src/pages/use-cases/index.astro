---
import Layout from "~/components/layout.astro"
import SolutionsHeader from "~/components/solutions/Header.vue"
import SolutionsPossibilities from "~/components/solutions/Possibilities.vue"
import SolutionsUseCases from "~/components/solutions/UseCases.vue"
import HomeEnterprise from "~/components/home/Enterprise.vue"
import { $fetchApi } from "~/utils/fetch"

const title = "Use cases for Modern Data Orchestration"
const description =
    "Harness the value of your data, unlock new insights, and drive informed decision-making using Kestra's automation platform"

const { results: stories } = await $fetchApi<{ results: Story[] }>(
    "/customer-stories-v2?featured=true",
)
---

<Layout title={title} description={description}>
    <SolutionsHeader client:load />
    <SolutionsPossibilities client:visible />
    <SolutionsUseCases client:visible />
    <HomeEnterprise client:visible {stories} />
</Layout>
