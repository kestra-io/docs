        .bd-title {
            margin-top: 2rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid $black-3;
            width: 100%;
            box-sizing: border-box;

            @include media-breakpoint-up(lg) {
                margin-left: -2rem;
                margin-right: -2rem;
                padding-left: 2rem;
                padding-right: 2rem;
                width: calc(100% + 4rem);
            }

