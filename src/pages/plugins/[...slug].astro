                @include media-breakpoint-up(lg) {
                    max-width: 100%;
                }
            }
        }

        .bd-main {
            padding: 0 20px;
            display: flex;
            flex-direction: column;
            width: 100%;
            box-sizing: border-box;

            @include media-breakpoint-up(lg) {
                padding: 0 2rem;
                padding-left: 2.7rem;
            }

            @include media-breakpoint-down(sm) {
