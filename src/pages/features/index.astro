---
import FeaturesHeader from '~/components/features/Header.vue';
import LazyFeaturesDeclarative from '~/components/features/Declarative.vue';
import LazyFeaturesOutBox from '~/components/features/OutBox.vue';
import LazyFeaturesExperience from '~/components/features/Experience.vue';
import LazyFeaturesFeatureEnterprise from '~/components/features/FeatureEnterprise.vue';
import LazyFeaturesCTA from '~/components/features/CTA.vue';
import Layout from '../../components/layout.astro';
import PluginsBox from '../../components/PluginsBox.astro';

const title = "Powerful Features for Reliable Data Workflows";
const description = "Create and Deploy all kinds Data Pipelines with Ease and Speed with Kestra | Your All-in-One Solution for Orchestrating Workflows";
---
<Layout title={title} description={description}>
    <div class="features">
        <FeaturesHeader client:load />
        <LazyFeaturesDeclarative client:visible />
        <LazyFeaturesOutBox client:visible />
        <section class="features-plugins">
            <div class="container">
                <PluginsBox />
            </div>
        </section>
        <LazyFeaturesExperience client:visible />
        <LazyFeaturesFeatureEnterprise client:visible />
        <LazyFeaturesCTA client:visible />
    </div>
</Layout>

<style lang="scss" scoped>
    @import "../../../assets/styles/variable";
    .features-plugins {
        background: linear-gradient(180deg, #E8EAF2 74.52%, #FFFFFF 74.52%);
        padding: 2rem 1rem;
        margin-top: -2rem;

        @include media-breakpoint-up(lg) {
            padding: 6rem;
        }
        text-align: center;

        .container {
            margin-bottom: 3rem;
        }
    }
</style>