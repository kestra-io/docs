---
import Layout from "~/components/layout.astro"
import Header from "~/components/features/declaratives/Header.vue"
import Main from "~/components/features/declaratives/Main.vue"
import Features from "~/components/features/declaratives/Features.vue"
import Empower from "~/components/features/declaratives/Empower.vue"
import PluginsBox from "~/components/PluginsBox.astro"
import LayoutFooterContact from "~/components/layout/FooterContact.vue"

const title = "Declarative Orchestration with Kestra"
const description =
    "Bring Infrastructure as Code Best Practices to All Workflows"
---

<Layout title={title} description={description}>
    <Header client:load />
    <Main client:visible />
    <Features client:visible />
    <Empower client:visible />
    <PluginsBox />
    <LayoutFooterContact
        client:visible
        title="Getting Started with Declarative Orchestration"
        darkButtonText="Read the docs"
        purpleButtonText="Get started"
    />
</Layout>
