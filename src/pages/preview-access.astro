---
import Layout from "~/components/layout.astro"
import PreviewAccessHeader from "~/components/preview-access/Header.vue"
import PreviewAccessFeatures from "~/components/preview-access/Features.vue"
import PreviewAccessDiscoverCloud from "~/components/preview-access/DiscoverCloud.vue"

const title = "Kestra Preview Mode"
const description =
    "Instantly access a read-only version of Kestra to explore its interface and workflows, no setup required."
---

<Layout title={title} description={description} headerTheme="lightHero">
    <div class="livedemo">
        <PreviewAccessHeader client:load />
        <PreviewAccessFeatures
            client:visible
            routePath={new URL(Astro.request.url).pathname}
        />
        <PreviewAccessDiscoverCloud client:visible />
    </div>
</Layout>

<style scoped lang="scss">
    @import "~/assets/styles/variable";

    .livedemo {
        &::after {
            content: "";
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background-image: url("~/components/preview-access/images/Bg.svg");
            background-size: contain;
            background-repeat: no-repeat;
            z-index: -3;
        }
        &::before {
            content: "";
            position: absolute;
            top: -15%;
            right: 0;
            width: 40%;
            height: 100%;
            background-image: url("~/components/preview-access/images/gradients_right.png");
            background-size: contain;
            background-repeat: no-repeat;
        }

        @media (max-width: 575.98px) {
            &::after {
                right: auto;
                left: 0;
                transform: scaleX(-1);
            }
        }

        @media (max-width: 767.98px) {
            &::after {
                right: auto;
                left: 0;
                transform: scaleX(-1);
            }
        }

        @media (max-width: 991.98px) {
            &::after {
                right: auto;
                left: 0;
                transform: scaleX(-1);
            }
        }

        & :global(h1),
        & :global(h2),
        & :global(h3),
        & :global(h4),
        & :global(h5),
        & :global(h6) {
            color: #fff;
            font-weight: 600;
        }

        & :global(h1) {
            font-size: $font-size-3xl;
        }

        & :global(h2) {
            font-size: $font-size-2xl;
        }

        & :global(h3) {
            font-size: $font-size-2xl;
        }

        & :global(h4) {
            font-size: $font-size-xl;
        }

        & :global(h5) {
            font-size: $font-size-lg;
        }

        & :global(h6) {
            font-size: $font-size-md;
            font-weight: 600;
        }

        & :global(p) {
            font-size: 14px;
            color: #fff;
        }
    }
</style>
