---
import Layout from "~/components/layout.astro"
import CompanyOrchestrate from "~/components/company/Orchestrate.astro"
import CompanyMission from "~/components/company/Mission.astro"
import CompanyTeam from "~/components/company/Team.astro"
import CompanyInvestors from "~/components/company/Investors.astro"
import CompanyNewsGrid from "~/components/company/NewsGrid.astro"
import CompanyLife from "~/components/company/Life.astro"

const title = "About Us"
const description =
    "Discover the team and values behind our mission to empower data-driven organizations worldwide"
---

<Layout title={title} description={description}>
    <div class="about-us">
        <CompanyOrchestrate />
        <CompanyMission />
        <CompanyTeam />
        <CompanyInvestors />
        <CompanyNewsGrid />
        <CompanyLife />
    </div>
</Layout>

<style scoped lang="scss">
    .container {
        overflow-y: hidden;
    }

    .about-us {
        position: relative;
        min-height: 100vh;

        &::after {
            content: "";
            position: fixed;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background: url("~/assets/teams/gridbg.svg") center/cover no-repeat
                fixed;
            z-index: -1;
        }
    }
</style>
