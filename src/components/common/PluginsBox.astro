---
import { $fetchApi } from "~/utils/fetch"
import { calculateTotalPlugins } from "~/composables/usePluginsCount"
import GradientCard from "~/components/card/GradientCard.vue"
import type { Plugin, PluginMetadata } from "@kestra-io/ui-libs"

const [pluginGroups, pluginMetadata] = await Promise.all([
    $fetchApi<Plugin[]>("/plugins/subgroups"),
    $fetchApi<PluginMetadata[]>("/plugins/metadata"),
])

const totalPlugins = Math.floor(calculateTotalPlugins(pluginGroups) / 100) * 100

const plugins = pluginMetadata
    .filter(
        (r) =>
            r.artifactId &&
            !["core", "plugin-kestra", "plugin-debezium"].includes(
                r.artifactId,
            ) &&
            !r.artifactId.startsWith("plugin-ee") &&
            !r.artifactId.startsWith("secret-") &&
            !r.artifactId.startsWith("storage-"),
    )
    .sort(() => 0.5 - Math.random())
    .slice(0, 20)
    .map((plugin) => ({
        title: plugin.title,
        link:
            `/plugins/${plugin.artifactId}` +
            (`plugin-${plugin.name}` !== plugin.artifactId
                ? "/" + plugin.name
                : ""),
        icon: `/icons/${plugin.group}.svg`,
    }))
---

<section>
    <GradientCard client:visible class="container card-block">
        <div class="plugin-text" data-usal="fade-right">
            <h2>
                <span>{totalPlugins}+</span> Plugins<br />That Integrate With<br
                />Your
                <span>Stack</span>
            </h2>
            <h2 class="mobile">Integrate With<br />Your <span>Stack</span></h2>
            <p>
                Connect with third-party systems, data sources, and
                applications. And if you require a custom integration, our
                platform makes it easy to build custom plugins.
            </p>
            <a href="/plugins" class="btn btn-md btn-primary">See All Plugins</a
            >
        </div>
        <div class="plugin-logos-grid">
            {
                plugins.map((plugin) => (
                    <a href={plugin.link}>
                        <img src={plugin.icon} alt={plugin.title} />
                    </a>
                ))
            }
        </div>
    </GradientCard>
</section>

<style lang="scss">
    @import "~/assets/styles/variable";

    section {
        display: flex;
        place-content: center;
        background: var(--ks-background-secondary);
        padding: $rem-2 0.5rem;
    }

    .card-block {
        position: relative;
        z-index: 1;
        margin-block: 4rem;
        background: var(--ks-background-primary);
        border: $block-border;

        @include media-breakpoint-up(xl) {
            padding: 4rem;
            display: flex;
            flex-direction: row-reverse;
            gap: 4rem;
            align-items: center;
        }
    }

    .plugin-logos-grid {
        display: grid;
        grid-template-columns: repeat(5, minmax(0, 1fr));
        flex: 1;
        min-width: 0;
        margin: clamp(1rem, 3vw, 2rem);

        @include media-breakpoint-up(xl) {
            margin: 0;
        }

        a {
            aspect-ratio: 1 / 1;
            padding: clamp(0.6rem, 1vw, 0.8rem);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;

            &:nth-child(even) {
                background: var(--ks-background-secondary);
                box-shadow: inset 1px 1px 1px var(--ks-border-primary);
            }
        }

        img {
            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            object-fit: contain;
            transition: transform 0.2s;

            &:hover {
                transform: scale(1.1);
            }
        }
    }

    .plugin-text {
        flex: 1;
        display: flex;
        flex-direction: column;
        place-items: center;
        gap: 1rem;
        max-width: 450px;
        margin: 2rem auto;
        text-align: center;

        @include media-breakpoint-up(xl) {
            margin: 0;
        }

        h2 {
            display: none;
            font-size: 3rem;
            font-weight: 600;
            color: var(--ks-content-primary);

            @include media-breakpoint-up(xl) {
                display: block;
            }

            &.mobile {
                display: block;

                @include media-breakpoint-up(xl) {
                    display: none;
                }
            }

            span {
                background: linear-gradient(90deg, #7c2eea, #658af9) text;
                -webkit-text-fill-color: transparent;
            }
        }

        p {
            color: var(--ks-content-secondary);
        }

        .btn {
            margin: 1rem;
            border-radius: $border-radius-lg;
        }
    }
</style>
