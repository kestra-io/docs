---
import { Image } from "astro:assets"
import { Icon } from "astro-icon/components"
import sliderIcon from "~/assets/enterprise/slider-icon.svg"
import StatsHeader from "~/components/layout/StatsHeader.astro"

interface Props {
    header?: {
        title?: string;
        subtitle?: string
    }
    stats?: Array<{
        category?: string;
        value?: string;
        label?: string
    }>
    cta?: {
        text: string;
        href: string
    }
    testimonialData?: Array<{
        message: string;
        name: string;
        designation: string;
        logo: any;
    }>
}

const { header, stats, cta, testimonialData } = Astro.props
---

<section class="slider-section">
    <div class="container" data-usal="fade-left">
        <StatsHeader
            {header}
            {stats}
            {cta}
        />

        {
            testimonialData && (
                <div class="testimonials-block">
                    <div class="carousel-wrapper">
                        <div class="carousel" id="testimonials-carousel">
                            {testimonialData.map((slide, index) => (
                                <div
                                    class="carousel-item"
                                    id={`slide-${index}`}
                                    data-usal="fade-up"
                                >
                                    <div class="content">
                                        <Image
                                            class="slide-svg"
                                            src={sliderIcon}
                                            alt="Quote icon"
                                        />
                                        <span class="message">
                                            {slide.message}
                                        </span>
                                        <div class="person">
                                            <div class="company-logo">
                                                <img
                                                    src={
                                                        typeof slide.logo ===
                                                        "string"
                                                            ? slide.logo
                                                            : slide.logo.src
                                                    }
                                                    alt={`${slide.name} company logo`}
                                                    loading="lazy"
                                                />
                                            </div>
                                            <div class="person-info">
                                                <p>{slide.name}</p>
                                                <span>{slide.designation}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            ))}
                        </div>

                        {testimonialData.length > 1 && (
                            <div class="slider-actions">
                                <div class="nav-actions mobile-only">
                                    <button
                                        class="nav-btn prev"
                                        aria-label="Previous slide"
                                    >
                                        <Icon name="mdi:chevron-left" />
                                    </button>
                                    <button
                                        class="nav-btn next"
                                        aria-label="Next slide"
                                    >
                                        <Icon name="mdi:chevron-right" />
                                    </button>
                                </div>

                                <div class="nav-actions desktop-only">
                                    <button
                                        class="nav-btn prev"
                                        aria-label="Previous slide"
                                    >
                                        <Icon name="mdi:chevron-left" />
                                    </button>
                                    <button
                                        class="nav-btn next"
                                        aria-label="Next slide"
                                    >
                                        <Icon name="mdi:chevron-right" />
                                    </button>
                                </div>
                            </div>
                        )}
                    </div>
                </div>
            )
        }
    </div>
</section>

<script>
    const initCarousel = () => {
        document.querySelectorAll(".carousel-wrapper").forEach((wrapper) => {
            const carousel = wrapper.querySelector<HTMLElement>(".carousel")
            if (!carousel) return

            const handleNav = (direction: number) => {
                carousel.scrollBy({
                    left: carousel.clientWidth * direction,
                    behavior: "smooth",
                })
            }

            wrapper
                .querySelectorAll(".nav-btn.prev")
                .forEach((btn) =>
                    btn.addEventListener("click", () => handleNav(-1)),
                )
            wrapper
                .querySelectorAll(".nav-btn.next")
                .forEach((btn) =>
                    btn.addEventListener("click", () => handleNav(1)),
                )
        })
    }

    initCarousel()
    document.addEventListener("astro:page-load", initCarousel)
</script>

<style lang="scss">
    @import "~/assets/styles/variable";

    .slider-section {
        background: var(--ks-background-secondary);
        padding: $rem-3 $rem-1;

        @include media-breakpoint-down(md) {
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
        }

        .testimonials-block {
            display: flex;
            flex-direction: column;
            padding: calc($spacer * 14) 0;
            background: url(/landing/pricing/visual-bg.png) no-repeat center
                top / 100% auto;
            gap: 42px;

            @include media-breakpoint-down(sm) {
                background-size: auto;
            }
        }

        .carousel-wrapper {
            position: relative;
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;

            .carousel {
                display: flex;
                width: 100%;
                overflow-x: auto;
                overflow-y: hidden;
                &::-webkit-scrollbar {
                    display: none;
                }

                &-item {
                    flex: 0 0 100%;
                    scroll-snap-align: center;
                    display: flex;
                    justify-content: center;
                    padding: 0 $rem-2;

                    .content {
                        backdrop-filter: blur(74px);
                        background: linear-gradient(
                            347.23deg,
                            #1c1c2699 9.24%,
                            #2b293299 106.62%
                        );
                        border-radius: 20px;
                        border: $block-border;
                        display: flex;
                        flex-direction: column;
                        gap: 40px;
                        padding: 72px 102px;
                        max-width: 944px;
                        width: 100%;

                        :global(html.light) & {
                            background: linear-gradient(
                                347.23deg,
                                rgba(255, 255, 255, 0.6) 9.24%,
                                rgba(235, 235, 245, 0.6) 106.62%
                            );
                        }

                        @include media-breakpoint-down(lg) {
                            gap: 16px;
                            padding: $rem-2;
                        }

                        .slide-svg {
                            width: 57px;
                            height: 57px;
                            @include media-breakpoint-down(md) {
                                width: 42px;
                                height: 32px;
                            }
                        }

                        .message {
                            font-size: 39px;
                            line-height: 1.34;
                            letter-spacing: -0.005em;
                            color: var(--ks-content-primary);

                            @include media-breakpoint-down(lg) {
                                font-size: 30px;
                            }
                            @include media-breakpoint-down(md) {
                                font-size: 19px;
                                line-height: 25px;
                            }
                        }

                        .person {
                            display: flex;
                            gap: 17px;
                            align-items: center;

                            .company-logo img {
                                height: 23.5px;
                                width: auto;
                                object-fit: contain;
                            }

                            &-info {
                                display: flex;
                                flex-direction: column;

                                p,
                                span {
                                    margin: 0;
                                    letter-spacing: -0.05em;
                                }
                                p {
                                    font-size: 14px;
                                    font-weight: 700;
                                    color: var(--ks-content-primary);
                                }
                                span {
                                    font-size: 12px;
                                    color: var(--ks-content-secondary);
                                    white-space: nowrap;
                                }
                            }
                        }
                    }
                }
            }

            .nav-actions {
                width: 100%;
                display: flex;
                justify-content: space-between;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 10;
                pointer-events: none;

                &.desktop-only {
                    max-width: 1120px;
                    margin-top: -60px;
                    @include media-breakpoint-down(xl) {
                        display: none;
                    }
                }

                &.mobile-only {
                    display: none;
                    @include media-breakpoint-down(xl) {
                        display: flex;
                    }
                }

                .nav-btn {
                    background: transparent;
                    border: none;
                    cursor: pointer;
                    padding: 10px;
                    pointer-events: auto;
                    color: var(--ks-content-primary);
                    opacity: 0.7;
                    transition: opacity 0.2s;

                    &:hover {
                        opacity: 1;
                    }
                    svg {
                        font-size: $rem-3;
                    }
                }
            }
        }
    }
</style>
