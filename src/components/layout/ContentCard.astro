---
import { Image } from "astro:assets"

interface Props {
    title: string
    description: string
    image: ImageMetadata
    index: number
}

const { title, description, image, index } = Astro.props
---

<div
    class="content-card"
    data-usal={`fade duration-400 delay-${50 + index * 50} ease-out`}
>
    <div
        class="inner-card"
        data-usal={`fade-u duration-350 delay-${100 + index * 50} ease-out`}
    >
        <div class="left-section">
            {title && <h3>{title}</h3>}
            {description && <p>{description}</p>}
        </div>
        <div class="right-section">
            <Image
                src={image}
                alt="Icon"
                data-usal={`zoomin duration-400 delay-${150 + index * 50} ease-out`}
                densities={[1, 2]}
            />
        </div>
    </div>
</div>

<style lang="scss">
    @import "~/assets/styles/variable";

    .content-card {
        width: 100%;
        gap: $rem-4;
        border-radius: 0.8125rem;
        padding: 0.375rem;
        border: $block-border;

        @include media-breakpoint-up(xxl) {
            max-width: 933px;
            height: 421px;
        }

        .inner-card {
            width: 100%;
            gap: $rem-2;
            border-radius: 0.8125rem;
            background: var(--ks-background-secondary);
            display: flex;
            flex-direction: column-reverse;
            align-items: center;

            @include media-breakpoint-up(lg) {
                flex-direction: row;
                padding-left: $rem-4;
                height: fit-content;
                gap: $rem-3;
            }

            .left-section {
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                justify-content: center;
                gap: 0.5rem;
                padding-inline: 0.5rem;

                @include media-breakpoint-up(lg) {
                    width: 396.5px;
                    height: 154px;
                }
            }

            .right-section {
                width: 100%;

                img {
                    width: 100%;
                    height: auto;
                    object-fit: contain;
                    display: block;
                    border-radius: 0.8125rem 0.8125rem 0 0;
                }

                @include media-breakpoint-up(lg) {
                    max-width: 396.5px;
                    height: fit-content;
                    margin-left: auto;

                    img {
                        border-radius: 0 0.8125rem 0.8125rem 0;
                    }
                }
            }
        }
    }
</style>
