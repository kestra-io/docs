---
import "~/assets/styles/docs.scss"
import "~/assets/styles/custom-elements.scss"
import NavSideBar from "~/components/docs/NavSideBar.vue"
import Layout from "./layout.astro"
import { buildDocsNavigation } from "../utils/buildDocsNavigation"
import Breadcrumb from "~/components/layout/Breadcrumb.vue"
import { generatePageNames, recursivePages } from "~/utils/navigation"

const navigation = await buildDocsNavigation()

const pageList = recursivePages(navigation[0])
const pageNames = generatePageNames(navigation[0])

interface Props {
    title?: string
    description?: string
    activeStem: string
    pageTitle?: string
    isHomePage?: boolean
    image?: string
}

const props = Astro.props
---

<Layout title={props.title} description={props.description} image={props.image}>
    <div
        class={`container-fluid bd-gutter bd-layout type-docs ${props.isHomePage ? "homepage" : ""}`}
    >
        <NavSideBar
            type="docs"
            navigation={navigation}
            slug={props.activeStem}
            client:idle
            transition:persist
        />
        <article
            class={`bd-main order-1 docs ${props.isHomePage ? "homepage" : ""}`}
        >
            <div class="bd-title">
                <Breadcrumb
                    slug={props.activeStem}
                    pageList={pageList}
                    pageNames={pageNames}
                    pageTitle={props.pageTitle}
                />
                <slot name="title" />
            </div>

            <slot name="headings" />

            <div class="layout-docs-wrapper">
                <div class="bd-content">
                    <slot />
                </div>
            </div>
        </article>
    </div>
</Layout>

<style scoped lang="scss">
    @import "~/assets/styles/variable";

    .container-fluid {
        gap: calc($spacer * 4);
        overflow-x: hidden;
        padding-left: 1rem;
        padding-right: 1rem;
        max-width: 100%;
        width: 100%;
        box-sizing: border-box;
        overflow: clip !important;

        @include media-breakpoint-down(md) {
            gap: calc($spacer * 2);
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        @include media-breakpoint-down(sm) {
            gap: $spacer;
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .bd-title {
            h1 {
                word-wrap: break-word;
                overflow-wrap: break-word;

                @include media-breakpoint-down(md) {
                    font-size: $h3-font-size;
                    max-width: 100%;
                }
            }

            @include media-breakpoint-up(lg) {
                margin-top: 4rem;
            }

            @include media-breakpoint-down(md) {
                margin-top: 2rem;
            }
        }

        :global(.bd-main) {
            gap: 1rem 4rem;
            max-width: 100%;

            @include media-breakpoint-down(md) {
                gap: 1.5rem;
            }

            @include media-breakpoint-down(sm) {
                gap: 1rem;
            }
        }

        .bd-content {
            margin: 0 auto 2em auto;
            box-sizing: border-box;
            width: auto;
            // overflow-x cannot be hidden here.
            // The heading links (#) would be hidden in the overflow.
            // overflow-x: hidden;

            @include media-breakpoint-down(xl) {
                margin-left: -2rem;
                padding-left: 2.5rem;
                padding-right: 0.5rem;
            }

            table {
                width: 100%;
                overflow-x: auto;
                display: block;
                margin-bottom: 1rem;
                border-collapse: collapse;
            }

            :deep(.astro-code) {
                width: 100%;
                max-width: 100%;
                overflow-x: auto;
                box-sizing: border-box;
            }

            :deep(pre) {
                width: 100%;
                max-width: 100%;
                overflow-x: auto;
                box-sizing: border-box;
            }
        }

        .title {
            font-size: $h2-font-size;
            font-weight: 400;
            line-height: 3.25rem;
            margin: 0 auto;
            max-width: 100%;
            word-wrap: break-word;
            overflow-wrap: break-word;
            margin-bottom: 0;

            @include media-breakpoint-down(md) {
                font-size: $h3-font-size;
                line-height: 2.5rem;
            }
        }
    }

    :deep(p) {
        font-weight: 400;
        line-height: 1.75rem;
        font-size: $h6-font-size;
    }

    :global(.bd-markdown > h2) {
        margin-top: calc($spacer * 3);
        padding-top: 0;
        margin-bottom: 2rem;

        &::before {
            background-color: transparent !important;
        }

        a {
            border-left: 5px solid $purple-36;
            padding-left: calc($spacer * 0.6);
            font-size: calc($font-size-base * 1.87);
            display: block;
        }
    }

    :global(.medium-zoom-image) {
        max-width: 100%;
        max-height: 100%;
    }

    :deep(p > a) {
        text-decoration: underline;
    }

    :deep(h2 > a) {
        font-weight: 600;
        line-height: 2.375rem;
        margin: 0;
    }

    :deep(h3 > a) {
        color: $white !important;
        font-size: 1.5rem;
        font-weight: 600;
        line-height: 2.375rem;
    }

    :deep(h4 > a) {
        color: $white !important;
        font-weight: 600;
    }

    :deep(h5) {
        color: $white !important;
        font-weight: 600;
    }

    .bd-main :deep(p > a),
    .bd-main :deep(ul a) {
        color: $purple-36;
    }

    .container-fluid,
    :deep(h2 > a) {
        color: $white !important;
    }

    :deep(p > code),
    :deep(li > code),
    :deep(a > code),
    :deep(table code) {
        color: $white-3;
        text-decoration: none !important;
    }

    :deep(.code-block),
    :deep(p > code),
    :deep(li > code),
    :deep(a > code),
    :deep(table code) {
        border: $block-border;
        background-color: $black-2 !important;
    }

    :deep(li > mark) {
        background-color: $link-color;
    }

    :deep(.docs-prev-next a) {
        span {
            color: $link-color;
        }

        .directory {
            color: $white;
        }
    }

    :deep(.btn) {
        span {
            color: $link-color;
        }

        &:hover {
            span {
                color: $white;
            }
        }
    }

    :deep(table) {
        td,
        th {
            background-color: transparent;
            border-bottom: 1px solid #3d3d3f;
            color: $white;

            a {
                color: $link-color;
            }
        }
    }

    .docs :deep(.img-block) {
        text-align: left !important;
    }

    .homepage {
        .bd-content {
            background:
                radial-gradient(
                        ellipse closest-side,
                        rgba($primary, 0.1) 0%,
                        #ddc4ff00 100%
                    )
                    no-repeat,
                url("../components/docs/assets/homepage-bg.webp") no-repeat;
            background-size:
                500px 250px,
                1261px 984px;
            background-position:
                top 110px right -30px,
                top -200px right -350px;
        }

        :global(a) {
            color: $white !important;
        }

        :global(.bd-markdown h2) {
            border-left: none !important;
            padding: 0;
        }

        :global(.bd-main h1) {
            font-size: 40px;
        }
    }

    :deep(.card) {
        background-color: $black-2;
        border: $block-border;

        .card-title {
            color: $white;
        }
    }
</style>
