---
interface Props {
    title?: string
    logos: { src: string; alt: string }[]
}

const { title, logos } = Astro.props
---

<section class="integrates-with">
    <div class="row px-3 px-md-0">
        <div class="col-12 text-center" data-usal="zoomin">
            <div class="mb-3">
                <img
                    src="/partners/integrate-with-logos/background.svg"
                    alt="Kestra's Integration Background"
                    width="258"
                    height="257"
                    loading="lazy"
                />
            </div>
            <div class="my-3">
                <h2>{title}</h2>
            </div>
            <div class="logos-container">
                {
                    logos.map((logo) => (
                        <img
                            class="partner-logo"
                            height="100"
                            width="100"
                            loading="lazy"
                            src={logo.src}
                            alt={logo.alt}
                        />
                    ))
                }
            </div>
            <a href="/plugins" class="btn btn-animated btn-purple-animated mt-4"
                >See all integrations</a
            >
        </div>
    </div>
</section>

<style lang="scss">
    @import "~/assets/styles/variable";

    .integrates-with {
        background: var(--ks-background-secondary);
        padding: $spacer * 3 0;

        .row .col-12 {
            @include media-breakpoint-down(md) {
                border-radius: 0.5rem;
                border: $block-border;
                background: var(--ks-background-secondary);
                padding: 2rem;
            }
        }

        h2 {
            color: var(--ks-content-primary);
        }

        .logos-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
            align-items: center;

            .partner-logo {
                max-width: 100%;
                height: auto;
            }
        }
    }
</style>
