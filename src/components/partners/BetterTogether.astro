---
interface Props {
    testimonials: {
        profile: string
        message: string
        name: string
        designation: string
        alt: string
        directory: string
        imgName: string
        "data-usal": string
        link?: string
    }[]
}

const { testimonials } = Astro.props
---

<section>
    <div class="container better-together">
        <h2 class="text-center mb-4 mx-auto">Better Together</h2>
        <div class="row">
            {
                testimonials.map((testimonial) => (
                    <div class="col-12 col-md-4 mb-4 testimonials-item">
                        <div class="card mb-3 ">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div class="d-flex flex-column">
                                    <div class="w-100 d-flex justify-content-between align-items-center">
                                        <span class="card-quote">"</span>
                                        {testimonial.imgName && (
                                            <img
                                                class="company-icon"
                                                data-usal="fade-u"
                                                src={`${testimonial.directory}${testimonial.imgName}.svg`}
                                                alt={testimonial.imgName}
                                                loading="lazy"
                                            />
                                        )}
                                    </div>
                                    <p class="mt-3">{testimonial.message}</p>
                                </div>
                                <div class="footer">
                                    <div />
                                    <span>
                                        {testimonial.link ? (
                                            <a
                                                href={testimonial.link}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                            >
                                                {testimonial.name}
                                            </a>
                                        ) : (
                                            testimonial.name
                                        )}
                                        <br />
                                        {testimonial.designation}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style lang="scss">
    @import "~/assets/styles/variable";

    section {
        
        padding: calc($spacer * 3) 0;

        .card {
            border: $block-border;
            height: 100%;
            background-color: var(--ks-background-secondary);

            .card-body {
                height: 100%;
                padding: $rem-2;
                text-align: left;

                .card-quote {
                    color: var(--ks-content-link);
                    font-size: calc($font-size-base * 4.625);
                    line-height: calc($spacer * 3.75);
                    height: 22px;
                }

                p {
                    color: var(--ks-content-primary);
                }

                span {
                    color: var(--ks-content-secondary);
                }

                .company-icon {
                    height: 2.5rem;
                }
            }
        }
    }
</style>
