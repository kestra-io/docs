---

import "~/assets/styles/custom-elements.scss"
import NavSideBar from "~/components/docs/NavSideBar.vue"
import Layout from "~/components/layout.astro"
import { buildDocsNavigation } from "~/utils/buildDocsNavigation"
import Breadcrumb from "~/components/layout/Breadcrumb.vue"
import { generatePageNames, recursivePages } from "~/utils/navigation"

const navigation = await buildDocsNavigation()

const pageList = recursivePages(navigation[0])
const pageNames = generatePageNames(navigation[0])

interface Props {
    title?: string
    description?: string
    activeStem: string
    pageTitle?: string
    isHomePage?: boolean
    image?: string
}

const props = Astro.props as Props
---

<Layout title={props.title} description={props.description} image={props.image}>
    <div
        class={`container-fluid bd-gutter bd-layout type-docs ${props.isHomePage ? "homepage" : ""}`}
    >
        <NavSideBar
            type="docs"
            navigation={navigation}
            slug={props.activeStem}
            client:idle
            transition:persist
        />
        <article
            class={`bd-main order-1 docs ${props.isHomePage ? "homepage" : ""}`}
        >
            <div class="bd-title">
                <Breadcrumb
                    slug={props.activeStem}
                    pageList={pageList}
                    pageNames={pageNames}
                    pageTitle={props.pageTitle}
                />
                <slot name="title" />
            </div>

            <slot name="headings" />

            <div class="layout-docs">
                <div class="bd-content">
                    <slot />
                </div>
            </div>
        </article>
    </div>
</Layout>

<style lang="scss">
    @import "~/assets/styles/variable";
    .container-fluid {
        gap: calc($spacer * 4);
        overflow-x: hidden;
        padding-left: 1rem;
        padding-right: 1rem;
        max-width: 100%;
        width: 100%;
        box-sizing: border-box;
        overflow: clip !important;

        @include media-breakpoint-down(md) {
            gap: calc($spacer * 2);
            padding-left: 0.75rem;
            padding-right: 0.75rem;
        }

        @include media-breakpoint-down(sm) {
            gap: $spacer;
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .bd-title {
            h1 {
                word-wrap: break-word;
                overflow-wrap: break-word;

                @include media-breakpoint-down(md) {
                    max-width: 100%;
                }
            }

            @include media-breakpoint-up(lg) {
                margin-top: 4rem;
            }

            @include media-breakpoint-down(md) {
                margin-top: 2rem;
            }
        }

        .bd-content {
            margin: 0 auto 2em auto;
            box-sizing: border-box;
            width: auto;

            @include media-breakpoint-down(xl) {
                margin-left: -2rem;
                padding-left: 2.5rem;
                padding-right: 0.5rem;
            }


        }

        .title {
            font-size: $h2-font-size;
            line-height: 3.25rem;
            margin: 0 auto;
            max-width: 100%;
            word-wrap: break-word;
            overflow-wrap: break-word;
            margin-bottom: 0;

            @include media-breakpoint-down(md) {
                font-size: $h3-font-size;
                line-height: 2.5rem;
            }
        }
    }



    :global(.medium-zoom-image) {
        max-width: 100%;
        max-height: 100%;
    }
    .homepage {
        .bd-content {
            background:
                radial-gradient(
                        ellipse closest-side,
                        color-mix(
                                in srgb,
                                var(--ks-content-color-highlight) 10%,
                                transparent
                            )
                            0%,
                        #ddc4ff00 100%
                    )
                    no-repeat,
                url("~/components/docs/assets/homepage-bg.webp") no-repeat;
            background-size:
                500px 250px,
                1261px 984px;
            background-position:
                top 110px right -30px,
                top -200px right -350px;
        }

        :global(a):not(.btn-primary) {
            color: var(--ks-content-primary) !important;

            &:hover {
                background-color: var(--ks-background-tertiary);
                color: var(--ks-content-secondary) !important;
            }
        }
    }
</style>
